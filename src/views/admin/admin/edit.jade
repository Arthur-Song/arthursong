            include ../includes/theme
            // 侧边导航栏
            include ../includes/menu
            //内容区域
            .tpl-content-wrapper
                .row-content.am-cf
                    .row
                        .am-u-sm-12.am-u-md-12.am-u-lg-12
                            .widget.am-cf
                                .widget-head.am-cf
                                    .widget-title.am-fl #{title || '编辑个人信息'}
